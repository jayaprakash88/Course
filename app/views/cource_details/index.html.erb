 <% if flash[:notice] %>
    <p><font color="red"><%= notice %></font></p>
  <% end %>
<%- model_class = CourceDetail -%>

<div class="center jumbotron">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cource_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cource_details.each do |cource_detail| %>
      <tr>
        <td><%= link_to cource_detail.id, cource_detail_path(cource_detail) %></td>
        <td><%= cource_detail.cource_name %></td>
        <td><%=l cource_detail.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cource_detail_path(cource_detail), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cource_detail_path(cource_detail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

            <%= link_to new_cource_detail_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Courese
<% end %>
